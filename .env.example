###############################################
# SAUC ASR Bridge - 环境变量示例文件 (.env)
# 复制为 .env 后根据你的环境修改值
###############################################

# ASR 服务监听
ASR_HOST=0.0.0.0
ASR_PORT=8081

# 后端 SAUC WebSocket 端点
BACKEND_URL=wss://openspeech.bytedance.com/api/v3/sauc/bigmodel_async

# 火山引擎凭据
APP_KEY=5142285262
ACCESS_KEY=

# 资源 ID（小时版：volc.bigasr.sauc.duration；并发版：volc.bigasr.sauc.concurrent）
RESOURCE_ID=volc.bigasr.sauc.duration

# 对话后端配置
DIALOG_URL=http://0.0.0.0:8084/chat/stream
DIALOG_MODE=sse
VOICE_ID=demo-voice
SYSTEM_PROMPT=你是一个礼貌且简洁的助手。

# 断句与流式提交控制
# 强标点集合：遇到这些标点时按完整句提交
DIALOG_PUNCT_STRONG=。！？!?….
# 软标点集合：达到长度阈值时可按软标点在尾部切分提交
DIALOG_PUNCT_SOFT=，、；;,
# 无标点时的自动提交长度阈值（字符数）
DIALOG_AUTOF_FLUSH_LEN=12
# 软标点提交的最小长度阈值（字符数）
DIALOG_SOFT_FLUSH_LEN=20
# 是否启用软标点提前提交（true/false）
DIALOG_ENABLE_SOFT_SUBMIT=true

# ASR 去重与节流（减少重复增量）
# 是否启用无变化抑制（final=false 且文本相同则不输出）
RESULT_DEDUP=true
# 最小变化字符数阈值（变化小于该值时抑制输出；0 表示不启用）
RESULT_MIN_DELTA=0
# 节流时间窗（毫秒，窗口内相同文本只保留一次；0 表示不启用）
RESULT_DEBOUNCE_MS=0

# 提示：所有键都可通过查询参数临时覆盖（仅联调用，不建议生产）